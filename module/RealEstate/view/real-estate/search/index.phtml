					function hl($inp, $words) { // inp phrase, word pattern
						$replace = array_flip(array_flip($words)); // remove duplicates
						$pattern = array();
						foreach ($replace as $k => $fword) {
							if (!preg_match('/\//', $fword)) {
								$pattern[] = '/([^<]|.?)(' . $fword . ')([^>])/i';
								$replace[$k] = "$1<b>$2</b>$3";
							}
						}
						return preg_replace($pattern, $replace, $inp);
					}

